@model YourNamespace.Views.Authentication.LoginModel

<h3>Login Form</h3>
<form method="post">
    <table>
        <tr>
            <td>Email</td>
            <td>
                <input type="email" asp-for="@Model.Email" />
            </td>
        </tr>
        <tr>
            <td>Password</td>
            <td>
                <input type="password" asp-for="@Model.Password" />
            </td>
        </tr>
        <tr>
            <td>&nbsp;</td>
            <td>
                <input type="submit" value="Login" />
            </td>
        </tr>
    </table>
</form>