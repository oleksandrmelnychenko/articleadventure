@model domain.ArticleAdventure.Models.ChangeBlogModel

@using (Html.BeginForm("ChangeBlog", "All", FormMethod.Post))
{
    <input type="hidden" asp-for="Article.NetUid" />
    @*@Html.HiddenFor(m => m.editModel.NetUid)*@
    <div style="height: 96px;
    width: 100%;
    margin-top: 0;
    background-color: #1e1e1e;
    border-top: 1px solid #2d2d2d;
    padding: 9px 9px 0;
    box-shadow: 0 ,0 ,2px, #222;">
        <input style="
    position: relative;
    min-height: 32px;
    margin-right: 2px;
    float: left;
    width: calc((100% - 124px)/2);
    background-color: #1e1e1e;
    color: white;"
           type="text"
               placeholder="Title" asp-for="Article.Title" />
        <input style="
    position: relative;
    min-height: 32px;
    margin-right: 2px;
    float: left;
    width: calc((100% - 124px)/2);
    background-color: #1e1e1e;
    color: white;"
           type="text"
               placeholder="Description" asp-for="Article.Description" />
        <input style="height: 32px;
    float: left;
    line-height: 30px;
    color: #0a66b7;
    font-size: 11px;
    text-transform: uppercase;
    letter-spacing: 1px;
    background-color: #2d2d2d;
    display: block;
    padding: 0 20px;
    border: 1px solid #2d2d2d;
    text-align: center;
    width: 120px;"
               type="submit" value="Save" />
    </div>
    @Html.TextAreaFor(m => m.Article.Body)

