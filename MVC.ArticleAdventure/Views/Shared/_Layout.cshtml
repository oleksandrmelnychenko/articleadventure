<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - data.ArticleAdventure</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/main.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ant-design-blazor/0.4.1/_content/AntDesign/css/ant-design-blazor.css" asp-append-version="true" />
    @*<link rel="stylesheet" href="~/data.ArticleAdventure.styles.css" asp-append-version="true" />*@
    @*<link rel="stylesheet" href="_content/AntDesign/css/ant-design-blazor.css" asp-append-version="true" />*@
    
</head>
<body>
    @{
        if (User.Identity.IsAuthenticated)
        {
            <header>
                <div class="header_container">
                    <ul>

                        @{
                            if (!User.Identity.IsAuthenticated)
                            {
                                <li>
                                    <a asp-area="" asp-controller="Identity" asp-action="Login">Login</a>
                                </li>
                                <li>
                                    <a asp-area="" asp-controller="Identity" asp-action="CreateAccount">Create Account</a>
                                </li>
                            }
                            else
                            {
                                <li>
                                    <a asp-area="" asp-controller="All" asp-action="AllBlogs">All</a>
                                </li>
                                <li class="isSelected">
                                    <a asp-area="" asp-controller="New" asp-action="NewBlog">New</a>
                                </li>
                                <li>
                                    <a asp-area="" asp-controller="Tags" asp-action="Tags">Tags</a>
                                </li>
                                <li>
                                    <a asp-area="" asp-controller="Images" asp-action="Images">Images</a>
                                </li>
                            }
                        }
                    </ul>
                </div>
                <div class="logOut">
                    <a asp-area="" asp-controller="New" asp-action="LogOutAccount">
                        <svg fill="#000000" height="200px" width="200px" version="1.1" id="Capa_1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" viewBox="0 0 490.3 490.3" xml:space="preserve"><g id="SVGRepo_bgCarrier" stroke-width="0"></g><g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round"></g><g id="SVGRepo_iconCarrier"> <g> <g> <path d="M0,121.05v248.2c0,34.2,27.9,62.1,62.1,62.1h200.6c34.2,0,62.1-27.9,62.1-62.1v-40.2c0-6.8-5.5-12.3-12.3-12.3 s-12.3,5.5-12.3,12.3v40.2c0,20.7-16.9,37.6-37.6,37.6H62.1c-20.7,0-37.6-16.9-37.6-37.6v-248.2c0-20.7,16.9-37.6,37.6-37.6h200.6 c20.7,0,37.6,16.9,37.6,37.6v40.2c0,6.8,5.5,12.3,12.3,12.3s12.3-5.5,12.3-12.3v-40.2c0-34.2-27.9-62.1-62.1-62.1H62.1 C27.9,58.95,0,86.75,0,121.05z"></path> <path d="M385.4,337.65c2.4,2.4,5.5,3.6,8.7,3.6s6.3-1.2,8.7-3.6l83.9-83.9c4.8-4.8,4.8-12.5,0-17.3l-83.9-83.9 c-4.8-4.8-12.5-4.8-17.3,0s-4.8,12.5,0,17.3l63,63H218.6c-6.8,0-12.3,5.5-12.3,12.3c0,6.8,5.5,12.3,12.3,12.3h229.8l-63,63 C380.6,325.15,380.6,332.95,385.4,337.65z"></path> </g> </g> </g></svg>
                    </a>
                </div>
            </header>
            <div class="body_container">
                <div class="container_content">
                    @RenderBody()
                </div>
            </div>
        }
        else
        {
            @RenderBody()
        }
    }

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @*<script src="_content/AntDesign/js/ant-design-blazor.js" asp-append-version="true"></script>*@
    <script src="https://cdnjs.cloudflare.com/ajax/libs/ant-design-blazor/0.4.1/_content/AntDesign/js/ant-design-blazor.min.js" asp-append-version="true"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/tinymce/4.0.20/tinymce.min.js"></script>
    <script type="text/javascript">
        tinymce.init({ selector: 'textarea', height: 300, weight: 300 });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
