@model domain.ArticleAdventure.Models.NewBlogModel

<div class="article_change">
    <form method="post">
        <div class="meta_row">
            <div class="inputs">
                <div class="input">
                    <input type="text" placeholder="Title" asp-for="Title" />
                </div>
                <div class="input">
                    <input type="text" placeholder="Description" asp-for="Description" />
                </div>
            </div>
            
            <button type="submit" value="Save">Save</button>
        </div>
        <textarea cols="20" rows="3" asp-for="Body"></textarea>
    </form>
</div>