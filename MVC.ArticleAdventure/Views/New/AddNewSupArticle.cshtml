@model domain.ArticleAdventure.Models.NewArticleModel

<div class="article_change">
    <form asp-controller="New">
        <input type="hidden" asp-for="authorArticle.NetUid" />
        <div class="meta_row">
            <div class="inputs">
                <div class="input" style="width: calc(50% - 80px);">
                    <input type="text" placeholder="Subject header" asp-for="authorArticle.Title" />
                </div>
                <div class="input" style="width: calc(50% - 80px);">
                    <input type="text" placeholder="Subject Description" asp-for="authorArticle.Description" />
                </div>
                <div class="input" style="width: calc(50% - 400px);">
                    <input type="text" placeholder="Price" asp-for="authorArticle.Price" />
                </div>
            </div>
            <button formmethod="post" type="submit" value="Save">Save</button>
        </div>
<textarea cols="20" rows="3" asp-for="authorArticle.Body"></textarea>
    </form>
</div>