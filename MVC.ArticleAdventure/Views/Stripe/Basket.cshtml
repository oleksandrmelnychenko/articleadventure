@model domain.ArticleAdventure.Models.BasketModel

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<div class="article_change" >
    <h1>Basket</h1>
    @if (Model.BasketArticles == null)
    {
        <div style="display:flex;">
            <div>Shopping cart is empty. Continue searching to find the article you are looking for.</div>
        </div>
    }
    else
    {
      <div style="display:flex;">
            <div style="width:calc(70% - 4px); ">
                @foreach (var article in Model.BasketArticles)
                {
                    <div class="desired_articles">
                        @article.Title
                    </div>
                }
            </div>
            <div>
                <button>Order Processing</button>
            </div>
      </div>
    }


    
</div>